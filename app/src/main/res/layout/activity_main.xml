<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swiffshot.swiffclient.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="roomId:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignBaseline="@+id/tv_roomid"
        android:layout_alignBottom="@+id/tv_roomid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:id="@+id/tv_messages"
        android:layout_width="355dp"
        android:layout_height="396dp"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/button"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="14dp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="33dp" />

    <EditText
        android:id="@+id/tv_message"
        android:layout_width="265dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="432dp"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:onClick="send_message"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="428dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tv_message"
        android:layout_toEndOf="@+id/tv_message"
        android:layout_marginBottom="21dp" />

    <TextView
        android:id="@+id/tv_roomid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_messages"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="-" />
</RelativeLayout>
